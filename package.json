{
  "name": "rochambeu",
  "version": "1.0.0",
  "description": "Rock-Paper-Scissors Online Anywhere",
  "main": "dist/app.js",
  "scripts": {
    "test:unit": "nyc mocha -r ts-node/register 'test/unit/**/*.ts' --recursive --exit",
    "test:integration": "nyc mocha -r ts-node/register 'test/integration/**/*.ts' --recursive --exit --timeout 20000",
    "test": " nyc mocha test/ --recursive --exit --timeout 20000",
    "watch": "nodemon -L --watch src -e ts,json --exec ts-node src/app.ts",
    "build-ts": "npx tsc",
    "lint": "npx eslint \"src/**/*\" --ext .js,.ts --quiet --fix",
    "start": "node dist/app.js",
    "build:clean": "rm -rf dist",
    "build": "npm run build:clean && npm run build-ts"
  },
  "author": "",
  "license": "*",
  "private": true,
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.1",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "http-graceful-shutdown": "^3.1.5",
    "ip": "^1.1.5",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "passport": "^0.5.2",
    "passport-http-bearer": "^1.0.1",
    "pouchdb": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-node": "^7.2.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.10",
    "@types/passport": "^1.0.7",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/pouchdb": "^6.4.0",
    "@types/pouchdb-node": "^6.1.4",
    "@types/sinon": "^10.0.8",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "mocha": "^9.1.4",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
